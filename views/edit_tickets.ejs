    <script>

        $(document).ready(function () {

            load_data();

            function load_data() {
                $.ajax({
                    url: "http://localhost:3000/ticke",
                    method: "POST",
                    data: { action: 'fetch' },
                    dataType: "JSON",

                    success: function (data) {
                        var html = '';

                        if (data.data.length > 0) {
                            for (var count = 0; count < data.data.length; count++) {
                                html += `
                            <tr>
                                <td>`+ data.data[count].ticket_id + `</td>
                                <td>`+ data.data[count].movie_name + `</td>
                                <td>`+ data.data[count].movie_genre + `</td>
                                <td>`+ data.data[count].theater_name + `</td>
                                <td>`+ data.data[count].show_date + `</td>
                                <td>`+ data.data[count].show_time + `</td>
                                <td>`+ data.data[count].show_end + `</td>
                                <td>`+ data.data[count].seat_no + `</td>
                                <td style="display:none;">`+ data.data[count].seat_no + `</td>
                                <td><button type="button" class="btn btn-danger btn-sm delete" data-id="` + data.data[count].ticket_id + `">Delete</button></td>
                            </tr>
                            `;
                            }
                        }

                        $('#sample_data tbody').html(html);
                    }
                });
            }

            $(document).on('click', '.delete', function () {

                var ticket_id = $(this).data('id');

                if (confirm("Are you sure do you want to cancel your ticket ?")) {
                    $.ajax({
                        url: "http://localhost:3000/ticke",
                        method: "POST",
                        data: { action: 'delete', ticket_id: ticket_id },
                        dataType: "JSON",
                        success: function (data) {
                            $('#message').html('<div class="alert alert-success">' + data.message + '</div>');
                            load_data();
                            setTimeout(function () {
                                $('#message').html('');
                            }, 5000);
                        }
                    });
                }

            });


        });
    </script>

